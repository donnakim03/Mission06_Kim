@{
}
@model Movie
<div class="text-center">
    <h1>Enter Movies to the Collection</h1>

    <form method="post">

        <input type="hidden" asp-for="MovieId" />

        <label asp-for="Category">Category</label><br />
        <select asp-for="CategoryId">
            <option value="1">Miscellaneous</option>
            <option value="2">Drama</option>
            <option value="3">Television</option>
            <option value="4">Horror/Suspense</option>
            <option value="5">Comedy</option>
            <option value="6">Family</option>
            <option value="7">Action/Adventure</option>
            <option value="8">VHS</option>
        </select>
        <br /><br />
        <label asp-for="Title">Title</label><br />
        <input asp-for="Title" />
        <br /><br />
        <label asp-for="Year">Year</label><br />
        <input asp-for="Year" />
        <br /><br />
        <label asp-for="Director">Director</label><br />
        <input asp-for="Director" />
        <br /><br />
        <label asp-for="Rating">Rating</label><br />
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br /><br />
        <label asp-for="Edited">Edited</label><br />
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br /><br />
        <label asp-for="LentTo">Lent To</label><br />
        <input asp-for="LentTo" />
        <br /><br />
        <label asp-for="CopiedToPlex">Copied to Plex</label><br />
        <input asp-for="CopiedToPlex" />
        <br /><br />
        <label asp-for="Notes">Notes</label><br />
        <input asp-for="Notes" maxlength="25" />
        <br /><br />
        <button type="submit">Add Movie</button>
    </form>
</div>
